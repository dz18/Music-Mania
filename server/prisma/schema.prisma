generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(cuid())
  email         String @unique
  username      String @unique
  password      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  avatar        String?
  phoneNumber   String? @unique
  aboutMe       String?
  age           Int?

  role          Role @default(USER)
  
  following     Follow[] @relation("Following")
  followers     Follow[] @relation("Follower")

  favArtists    UserFavArtist[]
  favReleases   UserFavRelease[]
  favSongs      UserFavSong[]

  artistReviews   UserArtistReviews[]
  releaseReviews  UserReleaseReviews[]
  songReviews     UserSongReviews[]

}

model Follow {
  id            String  @id @default(cuid())
  followerId    String
  followingId   String

  follower      User @relation("Following", fields: [followerId], references: [id])
  following     User @relation("Follower", fields: [followingId], references: [id])

  createdAt     DateTime @default(now())

  @@unique([followerId, followingId])
}

model Artist {
  id            String @id
  name          String

  favorited     UserFavArtist[]
  reviews       UserArtistReviews[]
}

model Release {
  id            String @id
  title         String
  artistCredit  Json
  coverArt      String?

  favorited     UserFavRelease[]
  reviews       UserReleaseReviews[]
}

model Song {
  id            String @id
  title         String
  artistCredit  Json
  coverArt      String?

  favorited     UserFavSong[]
  reviews       UserSongReviews[]
}

model UserFavArtist {
  user User @relation(fields: [userId], references: [id])
  userId String
  artist Artist @relation(fields: [artistId], references: [id])
  artistId String
  since DateTime @default(now())

  @@id([userId, artistId])
}

model UserFavRelease {
  user User @relation(fields: [userId], references: [id])
  userId String
  release Release @relation(fields: [releaseId], references: [id])
  releaseId String
  since DateTime @default(now())

  @@id([userId, releaseId])
}

model UserFavSong {
  user User @relation(fields: [userId], references: [id])
  userId String
  song Song @relation(fields: [songId], references: [id])
  songId String
  since DateTime @default(now())

  @@id([userId, songId])
}

model UserArtistReviews {
  user User @relation(fields: [userId], references: [id])
  userId String
  artist Artist @relation(fields: [artistId], references: [id])
  artistId String
  rating Decimal
  title String?
  review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status  Status

  @@id([userId, artistId])
}

model UserReleaseReviews {
  user User @relation(fields: [userId], references: [id])
  userId String
  release Release @relation(fields: [releaseId], references: [id])
  releaseId String
  rating Decimal
  title String?
  review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status  Status

  @@id([userId, releaseId])
}

model UserSongReviews {
  user User @relation(fields: [userId], references: [id])
  userId String
  song Song @relation(fields: [songId], references: [id])
  songId String
  rating Decimal
  title String?
  review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status  Status

  @@id([userId, songId])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  DRAFT
  PUBLISHED
}

enum Type {
  ARTIST
  SONG
  RELEASE
}

