generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(cuid())
  email         String @unique
  username      String @unique
  password      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime
  image         String?
  phoneNumber   String? @unique
  aboutMe       String?

  role          Role @default(USER)

  followers     Follow[] @relation("followers")
  following     Follow[] @relation("following")

  favArtist     String[]
  favRecordings String[]
  favReleases   String[]

  reviews       Review[]
  playlists     Playlist[]
  comments      Comment[]
}

model Follow {
  id            String @id @unique  
  follower      User @relation("following", fields: [followerId], references: [id])
  followerId    String
  following     User @relation("followers", fields: [followingId], references: [id])
  followingId   String
  createdAt     DateTime @default(now())
}

model Playlist {
  id            String @id @default(cuid())
  userId        String
  user          User @relation(fields: [userId], references: [id])
  title         String
  description   String?
  recordIds     String[]
  status        Status
  coverArt      String?
  comments      Comment[]
  rating        Decimal
  tags          Tag[]
}

model Comment {
  id            String @id @default(cuid())
  userId        String
  playlistId    String
  comment       String

  user          User @relation(fields: [userId], references: [id])
  playlist      Playlist @relation(fields: [playlistId], references: [id])
}

model Review {
  id            String @id @default(cuid())
  userId        String
  type          Type
  itemId        String
  rating        Decimal
  comment       String
  createAt      DateTime @default(now())
  updatedAt     DateTime @updatedAt
  status        Status @default(DRAFT)
  tags          Tag[]

  user          User @relation(fields: [userId], references: [id])
}

model Tag {
  id            String @id @default(cuid())
  name          String @unique
  createdAt     DateTime @default(now())
  
  playlists     Playlist[]
  reviews       Review[]
}

enum Role {
  USER
  ADMIN
}

enum Status {
  DRAFT
  PUBLISHED
}

enum Type {
  ARTIST
  RECORDING
  RELEASE
}

