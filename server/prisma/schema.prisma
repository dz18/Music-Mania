generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(cuid())
  email         String @unique
  username      String @unique
  password      String
  createdAt     DateTime @default(now())
  image         String?
  phoneNumber   String? @unique
  role          Role

  favArtist     String[]
  favRecordings String[]
  favReleases   String[]

  reviews       Review[]
  playlists     Playlist[]
  comments      Comment[]
}

model Playlist {
  id            String @unique @default(cuid())
  userId        String
  title         String
  description   String?
  recordIds     String[]
  status        Status
  coverArt      String?
  comments      Comment[]

  user          User @relation(fields: [userId], references: [id])
}

model Comment {
  id            String @unique @default(cuid())
  userId        String
  playlistId    String
  comment       String
  tags          String[]

  user          User @relation(fields: [userId], references: [id])
  playlist      Playlist @relation(fields: [playlistId], references: [id])
}

model Review {
  id            String @id @default(cuid())
  userId        String 
  type          String
  rating        Decimal
  comment       String
  createAt      DateTime @default(now())
  updatedAt     DateTime @updatedAt
  status        Status @default(DRAFT)

  user          User @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  DRAFT
  PUBLISHED
}

