generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(cuid())
  email         String @unique
  username      String @unique
  password      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  phoneNumber   String? @unique
  aboutMe       String?
  age           Int?

  role          Role @default(USER)
  
  following     Follow[] @relation("Following")
  followers     Follow[] @relation("Follower")

  likedArtists    UserLikedArtist[]
  likedReleases   UserLikedRelease[]
  likedSongs      UserLikedSong[]

  artistReviews   UserArtistReviews[]
  releaseReviews  UserReleaseReviews[]
  songReviews     UserSongReviews[]

  artistReviewComments   ArtistReviewComment[]
  releaseReviewComments  ReleaseReviewComment[]
  songReviewComments     SongReviewComment[]
  
  artistReviewLikes   ArtistReviewLike[]
  releaseReviewLikes  ReleaseReviewLike[]
  songReviewLikes     SongReviewLike[]
}

model Follow {
  id            String  @id @default(cuid())
  followerId    String
  followingId   String

  follower      User @relation("Following", fields: [followerId], references: [id])
  following     User @relation("Follower", fields: [followingId], references: [id])

  createdAt     DateTime @default(now())

  @@unique([followerId, followingId])
}

model Artist {
  id            String @id
  name          String

  liked         UserLikedArtist[]
  reviews       UserArtistReviews[]
}

model Release {
  id            String @id
  title         String
  artistCredit  Json
  coverArt      String?

  liked     UserLikedRelease[]
  reviews       UserReleaseReviews[]
}

model Song {
  id            String @id
  title         String
  artistCredit  Json
  coverArt      String?

  liked     UserLikedSong[]
  reviews       UserSongReviews[]
}

model UserLikedArtist {
  user User @relation(fields: [userId], references: [id])
  userId String
  artist Artist @relation(fields: [artistId], references: [id])
  artistId String
  since DateTime @default(now())

  @@id([userId, artistId])
}

model UserLikedRelease {
  user User @relation(fields: [userId], references: [id])
  userId String
  release Release @relation(fields: [releaseId], references: [id])
  releaseId String
  since DateTime @default(now())

  @@id([userId, releaseId])
}

model UserLikedSong {
  user User @relation(fields: [userId], references: [id])
  userId String
  song Song @relation(fields: [songId], references: [id])
  songId String
  since DateTime @default(now())

  @@id([userId, songId])
}

model UserArtistReviews {
  user User @relation(fields: [userId], references: [id])
  userId String

  artist Artist @relation(fields: [artistId], references: [id])
  artistId String

  rating Decimal
  title String?
  review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status  Status

  comments ArtistReviewComment[]
  likes    ArtistReviewLike[]

  @@id([userId, artistId])
}

model UserReleaseReviews {
  user User @relation(fields: [userId], references: [id])
  userId String

  release Release @relation(fields: [releaseId], references: [id])
  releaseId String

  rating Decimal
  title String?
  review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status  Status

  comments ReleaseReviewComment[]
  likes    ReleaseReviewLike[]

  @@id([userId, releaseId])
}

model UserSongReviews {
  user User @relation(fields: [userId], references: [id])
  userId String
  song Song @relation(fields: [songId], references: [id])
  songId String
  rating Decimal
  title String?
  review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status  Status

  comments SongReviewComment[]
  likes    SongReviewLike[]

  @@id([userId, songId])
}

model ArtistReviewComment {
  id        String @id @default(cuid())

  user      User   @relation(fields: [userId], references: [id])
  userId    String

  review    UserArtistReviews @relation(fields: [reviewUserId, reviewArtistId], references: [userId, artistId])
  reviewUserId   String
  reviewArtistId String

  comment   String
  createdAt DateTime @default(now())
}

model ReleaseReviewComment {
  id        String @id @default(cuid())

  user      User   @relation(fields: [userId], references: [id])
  userId    String

  review    UserReleaseReviews @relation(fields: [reviewUserId, reviewReleaseId], references: [userId, releaseId])
  reviewUserId    String
  reviewReleaseId String

  comment   String
  createdAt DateTime @default(now())
}

model SongReviewComment {
  id        String @id @default(cuid())

  user      User   @relation(fields: [userId], references: [id])
  userId    String

  review    UserSongReviews @relation(fields: [reviewUserId, reviewSongId],references: [userId, songId])
  reviewUserId String
  reviewSongId String

  comment   String
  createdAt DateTime @default(now())
}

model ArtistReviewLike {
  user User @relation(fields: [userId], references: [id])
  userId String

  review UserArtistReviews @relation(fields: [reviewUserId, reviewArtistId], references: [userId, artistId])
  reviewUserId   String
  reviewArtistId String

  createdAt DateTime @default(now())

  @@id([userId, reviewUserId, reviewArtistId])
}

model ReleaseReviewLike {
  user User @relation(fields: [userId], references: [id])
  userId String

  review UserReleaseReviews @relation(fields: [reviewUserId, reviewReleaseId], references: [userId, releaseId])
  reviewUserId    String
  reviewReleaseId String

  createdAt DateTime @default(now())

  @@id([userId, reviewUserId, reviewReleaseId])
}

model SongReviewLike {
  user User @relation(fields: [userId], references: [id])
  userId String

  review UserSongReviews @relation(fields: [reviewUserId, reviewSongId],references: [userId, songId])
  reviewUserId String
  reviewSongId String

  createdAt DateTime @default(now())

  @@id([userId, reviewUserId, reviewSongId])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  DRAFT
  PUBLISHED
}

enum Type {
  ARTIST
  SONG
  RELEASE
}

